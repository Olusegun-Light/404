    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bank Statement</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .statement-container {
            background: white;
            padding: 40px;
            margin: 30px auto;
            max-width: 800px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .bank-header {
            border-bottom: 2px solid #004080;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }

        .bank-header h2 {
            color: #004080;
            margin: 0;
        }

        .section-title {
            font-weight: bold;
            margin-top: 30px;
            color: #004080;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .info-table th,
        .info-table td {
            text-align: left;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .btn-section {
            margin-top: 30px;
        }

        .error-msg {
            color: red;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <div class="statement-container">
        <div class="bank-header">
            <h2>CAIXA</h2>
            <p>Account Statement Portal</p>
        </div>

        <h4 class="section-title">Account Holder Information</h4>
        <table class="info-table">
            <tr>
                <th>Name:</th>
                <td>
                    <%= name %>
                </td>
            </tr>
            <tr>
                <th>ID:</th>
                <td>46596592</td>
            </tr>
            <tr>
                <th>Statement Period:</th>
                <td>Nov 22, 2024 - Dec 02, 2024</td>
            </tr>
        </table>

        <div class="btn-section">
            <h4 class="section-title">Secure Document Access</h4>
            <p>Please click the button below to access your official bank statement (PDF).</p>

            <button id="pdfAccessBtn" class="btn btn-outline-primary">View Statement PDF</button>

            <div id="pdfPasswordField" style="display: none;" class="mt-3">
                <div class="input-group mb-2">
                    <input type="password" id="pdfPasswordInput" class="form-control" placeholder="Enter Pin">
                    <button id="submitPdfPassword" class="btn btn-secondary">Submit</button>
                </div>
                <div id="pdfPasswordError" class="error-msg"></div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("pdfAccessBtn").addEventListener("click", function () {
            document.getElementById("pdfPasswordField").style.display = "block";
        });

        document.getElementById("submitPdfPassword").addEventListener("click", function () {
            document.getElementById("pdfPasswordError").textContent = "Password incorrect";
        });
    </script>
</body>

</html>